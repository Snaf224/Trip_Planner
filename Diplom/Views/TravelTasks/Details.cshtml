@model Diplom.Models.TravelTask

@{
    ViewData["Title"] = "Детали задачи";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Описание:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Завершена:</dt>
            <dd class="col-sm-9">
                <div class="form-group">
                    <input type="checkbox" asp-for="IsCompleted" class="form-check-input" disabled />
                    <span asp-validation-for="IsCompleted" class="text-danger"></span>
                </div>
            </dd>

            <dt class="col-sm-3">Дата завершения:</dt>
            <dd class="col-sm-9">@Model.CompletionDate?.ToString("dd.MM.yyyy")</dd>
        </dl>
    </div>
</div>

<div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>
