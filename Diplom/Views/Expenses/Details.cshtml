@model Diplom.Models.Expense

@{
    ViewData["Title"] = "Детали траты";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Описание:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Сумма:</dt>
            <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-3">Категория расхода:</dt>
            <dd class="col-sm-9">@Model.Category</dd>

            <dt class="col-sm-3">Дата расхода:</dt>
            <dd class="col-sm-9">@Model.ExpenseDate.ToString("dd.MM.yyyy")</dd>
            
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>
