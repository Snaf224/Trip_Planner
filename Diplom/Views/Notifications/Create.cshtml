@model Diplom.Models.Notification

@{
    ViewData["Title"] = "Добавление нового уведомления";
}

<div class="card shadow">
    <div class="card-header">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" asp-controller="Notifications" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Message" class="control-label">Сообщение</label>
                        <input asp-for="Message" class="form-control" />
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SendDate" class="control-label">Дата отправки</label>
                        <input asp-for="SendDate" class="form-control" type="date" />
                        <span asp-validation-for="SendDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IsRead" class="control-label">Прочитано</label>
                        <select asp-for="IsRead" class="form-control">
                            <option value="true">Да</option>
                            <option value="false">Нет</option>
                        </select>
                        <span asp-validation-for="IsRead" class="text-danger"></span>
                    </div>

                    @*
                    <div class="form-group">
                    <label asp-for="ReceiverId" class="control-label">Получатель</label>
                    <select asp-for="ReceiverId" class="form-control" asp-items="@ViewData["ReceiverId"] as SelectList"></select>
                    <span asp-validation-for="ReceiverId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                    <label asp-for="TripId" class="control-label">Поездка</label>
                    <select asp-for="TripId" class="form-control" asp-items="@ViewData["TripId"] as SelectList"></select>
                    <span asp-validation-for="TripId" class="text-danger"></span>
                    </div>
                    *@

                    <div class="form-group mt-3">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                        <a asp-action="Index" asp-controller="Notifications" class="btn btn-secondary">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}